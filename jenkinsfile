  git branch: 'jenkins_hw', url: 'https://github.com/ArtemBerdnik/performance_essentials_gatling.git'
}

stage("configure") {
  sh "mkdir $WORKSPACE/$BUILD_NUMBER/"
  sh "rm -rf /tmp/reports"
}

