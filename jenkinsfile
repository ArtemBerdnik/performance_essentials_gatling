pipeline {
    agent any

    tools {
        nodejs "node"
    }

    stages {
        stage('Clone Git Repo') {
            steps {
                git branch: 'jenkins_hw', url: 'https://github.com/ArtemBerdnik/performance_essentials_gatling.git'
            }
        }

        stage("Configure") {
            steps {
                sh "mkdir $WORKSPACE/$BUILD_NUMBER/"
                sh "rm -rf /tmp/reports"
            }
        }

        stage('Run JMETER test') {
            steps {
                sh "mkdir -p /tmp/reports"
                sh "/Users/Artem_Berdnik/Downloads/apache-jmeter-5.6.3/bin/jmeter -n -t src/test/jmeter/hw1/hw_1.jmx -l /tmp/reports/JMeter.jtl -e -o /tmp/reports/HtmlReport"
            }
        }

        stage("Run Gatling test") {
            steps {
                env.M2_HOME = '/opt/homebrew/Cellar/maven/3.9.6/libexec'
                env.PATH = "${env.PATH}:${env.M2_HOME}/bin"
                sh "mvn clean gatling:test -DamountOfUsers=5"
            }
        }

        stage('Run Lighthouse Test') {
            steps {
                sh 'npm i puppeteer --save'
                sh 'npm install -g lighthouse@9.6.8'
                sh 'lighthouse --version'
                sh 'node $WORKSPACE/src/test/lighthouse/hw1/hw.js'
            }
        }

        stage('publish results') {
            steps {
                sh "mv /tmp/reports/* $WORKSPACE/$BUILD_NUMBER/"
                archiveArtifacts artifacts: "$BUILD_NUMBER/JMeter.jtl, $BUILD_NUMBER/HtmlReport/index.html, $WORKSPACE/performance_ess_lighthouse_hw.report.html"
                gatlingArchive()
            }
        }
    }
}
